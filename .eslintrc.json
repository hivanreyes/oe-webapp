{
  "extends": [
    "airbnb/base",
    "prettier",
    "plugin:react/recommended",
    "plugin:import/react",
    "plugin:import/recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "node": true
  },
  "plugins": [
    "prettier",
    "react",
    "jest"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 0,
    "arrow-parens": 0,
    "class-methods-use-this": 0,
    "curly": [2, "multi-line"],
    "import/extensions": ["error", "never", { "packages": "always" }],
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": [0],
    "no-confusing-arrow": 0,
    "no-duplicate-imports": 0,
    "no-else-return": 0,
    "no-prototype-builtins": 0,
    "no-unused-vars": [2, { "varsIgnorePattern": "\"^_+$\"" }],
    "no-unused-expressions": ["error", { "allowTaggedTemplates": true }],
    "quotes": 0,
    "prettier/prettier": 2,
    "symbol-description": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "globals": {
    "SyntheticEvent": true,
    "SyntheticAnimationEvent": true,
    "SyntheticClipboardEvent": true,
    "SyntheticCompositionEvent": true,
    "SyntheticInputEvent": true,
    "SyntheticUIEvent": true,
    "SyntheticFocusEvent": true,
    "SyntheticKeyboardEvent": true,
    "SyntheticMouseEvent": true,
    "SyntheticDragEvent": true,
    "SyntheticWheelEvent": true,
    "SyntheticTouchEvent": true,
    "SyntheticTransitionEvent": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  }
}
